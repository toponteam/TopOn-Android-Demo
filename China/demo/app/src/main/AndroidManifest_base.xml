<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.test.ad.demo">
    <uses-sdk android:minSdkVersion="14" />
    <application
        android:name=".DemoApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@android:style/Theme.DeviceDefault.Light">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name="com.test.ad.demo.MainActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.test.ad.demo.NativeAdActivity"
            android:label="Native"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.test.ad.demo.RewardVideoAdActivity"
            android:label="RewardedVideo"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.test.ad.demo.InterstitialAdActivity"
            android:label="Interstitial"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.test.ad.demo.BannerAdActivity"
            android:label="Banner"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.test.ad.demo.SplashAdActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout" />
        <activity
            android:name="com.test.ad.demo.SplashAdShowActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
        <activity
            android:name="com.test.ad.demo.SplashAdShowInCurrentActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />

        <activity
            android:name="com.test.ad.demo.NativeListActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />

        <activity
            android:name="com.test.ad.demo.MultipleFormatLoadActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
        <activity
            android:name="com.test.ad.demo.TestMainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" /> <!-- Bugly -->
        <activity
            android:name="com.test.ad.demo.InterstitialShowInOtherActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />

        <activity
            android:name="com.test.ad.demo.InterstitalAutoActivity"
            android:screenOrientation="portrait"
            android:label="InterstitialAuto"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name="com.test.ad.demo.RewardVideoAutoActivity"
            android:screenOrientation="portrait"
            android:label="RewardVideoAuto"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Holo.Light"/>
    </application>

</manifest>